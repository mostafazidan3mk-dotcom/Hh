// FASTER, MORE REACTIVE process_tf function
process_tf(tf) =>
    var float rangeHigh = na
    var float rangeLow = na
    var float rangeMid = na
    var int rangeStart = 0
    var bool inConsolidation = true
    var bool bullishTouch = false
    var bool bearishTouch = false
    
    // Fast reversal tracking
    var bool fastReversalBull = false
    var bool fastReversalBear = false
    
    [tfOpen, tfHigh, tfLow, tfClose, tfTime] = request.security(syminfo.tickerid, tf, [open, high, low, close, time], barmerge.gaps_off, barmerge.lookahead_on)
    
    newBar = ta.change(tfTime) != 0
    
    tfUp = tfHigh
    tfDown = tfLow
    tfChildUp = tfOpen > tfClose ? tfOpen : tfClose
    tfChildDown = tfOpen > tfClose ? tfClose : tfOpen
    
    if newBar
        // FASTER BREAKOUT DETECTION - Use wicks for immediate reaction
        if use_wick_breakouts
            // Wick-based breakouts (faster)
            upControl = tfHigh > rangeHigh and bar_index - rangeStart > minbars and bar_index - rangeStart <= maxbars
            downControl = tfLow < rangeLow and bar_index - rangeStart > minbars and bar_index - rangeStart <= maxbars
        else
            // Original body-based breakouts (slower)
            upControl = tfChildUp > rangeHigh and bar_index - rangeStart > minbars and bar_index - rangeStart <= maxbars
            downControl = tfChildDown < rangeLow and bar_index - rangeStart > minbars and bar_index - rangeStart <= maxbars
        
        // FAST REVERSAL DETECTION - Catches your 4H pattern
        if fast_reversal_detection and not na(rangeHigh) and not na(rangeLow)
            // Bullish reversal: Wick swept below but closed above range
            wickSweptLow = tfLow < rangeLow
            closedInRange = tfClose >= rangeLow and tfClose <= rangeHigh
            if wickSweptLow and closedInRange
                fastReversalBull := true
            else
                fastReversalBull := false
                
            // Bearish reversal: Wick swept above but closed below range
            wickSweptHigh = tfHigh > rangeHigh
            closedInRange_bear = tfClose <= rangeHigh and tfClose >= rangeLow
            if wickSweptHigh and closedInRange_bear
                fastReversalBear := true
            else
                fastReversalBear := false
        else
            fastReversalBull := false
            fastReversalBear := false
        
        if (upControl or downControl)
            inConsolidation := false
        
        if (inConsolidation and tfChildDown <= rangeHigh and tfChildDown >= rangeLow and tfChildUp <= rangeHigh and tfChildUp >= rangeLow and bar_index > 1)
            rangeStart := rangeStart
        else
            rangeHigh := tfHigh
            rangeLow := tfLow
            rangeStart := bar_index
            inConsolidation := true
        
        if not inConsolidation and (bar_index - rangeStart > maxbars or bar_index - rangeStart < minbars)
            inConsolidation := true
        
        rangeMid := (rangeHigh + rangeLow) / 2
        bullishTouch := false
        bearishTouch := false
    
    // Enhanced touch detection with faster reaction
    if inConsolidation
        bullishWickTouch = low < rangeLow and close > rangeLow and high < rangeHigh
        bullishBodyTouch = open < rangeLow and close > rangeLow
        bearishWickTouch = high > rangeHigh and close < rangeHigh and low > rangeLow
        bearishBodyTouch = open > rangeHigh and close < rangeHigh
        
        bullishTouch := (use_wick_touch and bullishWickTouch) or (use_body_touch and bullishBodyTouch) or fastReversalBull
        bearishTouch := (use_wick_touch and bearishWickTouch) or (use_body_touch and bearishBodyTouch) or fastReversalBear
    
    [rangeHigh, rangeLow, rangeMid, rangeStart, inConsolidation, newBar, bullishTouch, bearishTouch, fastReversalBull, fastReversalBear]

// Process data for each timeframe
[high1, low1, mid1, start1, inRange1, newBar1, bullishTouch1, bearishTouch1, fastRev1_bull, fastRev1_bear] = process_tf(tf1)
[high2, low2, mid2, start2, inRange2, newBar2, bullishTouch2, bearishTouch2, fastRev2_bull, fastRev2_bear] = process_tf(tf2)
