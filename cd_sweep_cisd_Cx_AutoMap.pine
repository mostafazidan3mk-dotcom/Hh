// Auto mapping: current chart TF -> HTF
f_map_htf_from_chart_tf(_chartTf) =>
    // Returns a constant string based on the chart TF
    switch _chartTf
        "1"   => "15"   // 1m  -> 15m
        "5"   => "60"   // 5m  -> 1h
        "15"  => "240"  // 15m -> 4h
        "60"  => "D"    // 1h  -> 1D
        "240" => "W"    // 4h  -> 1W
        "D"   => "M"    // 1D  -> 1M
        "W"   => "3M"   // 1W  -> 3M
        => htf         // fallback to manual HTF

htf_used = autoMap ? f_map_htf_from_chart_tf(tf) : htf

