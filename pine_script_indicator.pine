[high7, low7, start7, inRange7, newBar7, bullishTouch7, bearishTouch7] = process_tf(tf7)

// Modified plot_lines function - only mid line
plot_lines(tfColor, midColor, high, low, start, inRange, newBar, useMid, bullishTouch, bearishTouch, tfName) =>
    var line midLine = na
    var label midLabel = na
    
    if newBar and inRange
        if not na(midLine)
            line.delete(midLine)
        if not na(midLabel)
            label.delete(midLabel)
        
        validStart = math.max(start, 0)
        if useMid
            midLine := line.new(validStart, (high + low) / 2, bar_index, (high + low) / 2, color=midColor, width=midlinewidth, style=line.style_dashed)
        
        if show_eol_labels and useMid
            midLabel := label.new(bar_index + eol_label_offset, (high + low) / 2, text=tfName + " CRT Mid", color=color.new(midColor, 70), textcolor=midColor, style=label.style_none, size=size.small)
    
    if not na(midLine) and inRange and useMid
        line.set_x2(midLine, bar_index)
        
        if show_eol_labels
            label.set_x(midLabel, bar_index + eol_label_offset)
            label.set_y(midLabel, (high + low) / 2)
    
    [bullishTouch, bearishTouch]

// Plot lines for each timeframe
if use_tf1
    [bullishTouch1, bearishTouch1] = plot_lines(tf1_color, tf1_mid_color, high1, low1, start1, inRange1, newBar1, use_tf1_mid, bullishTouch1, bearishTouch1, "M30")
if use_tf2
